<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary1"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diccionario Traductor"
            android:textSize="20dp"
            android:layout_marginTop="20dp"

            android:gravity="center_horizontal"
            android:textColor="@color/colorTexto"
            android:background="@color/colorPrimary1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorTexto"
            >
        <EditText
            android:id="@+id/edt_dic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Introduce una palabra"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"


            />
        </LinearLayout>
    </LinearLayout>

        <ImageView
            android:id="@+id/img_diccio"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img"
            android:layout_marginTop="6dp"
            android:onClick="zoomin"
            android:background="@color/colorCabeza"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary1">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Aymara"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorTexto"
                />

            <TextView
                android:id="@+id/tv_aymara"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:text=""
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_aymara"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:onClick="idiota"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Quechua"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorTexto"
                />
            <TextView
                android:id="@+id/tv_quechua"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/btn_quechua"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:onClick="callate"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorCuerpo">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Traducir"
                android:textSize="20dp"
                android:onClick="traducir"/>


            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="cancelar"
                android:textSize="20dp"
                android:onClick="salir"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_acd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acerca de..."
            android:textSize="20dp"
            android:layout_marginTop="0dp"
            android:onClick="acerca"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>


